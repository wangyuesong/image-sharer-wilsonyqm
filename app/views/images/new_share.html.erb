<p class="image-detail">
  <p class="image-detail__label">Image:</p>
  <p><%= image_tag @image.url, class: 'image-detail__box' %></p>
</p>

<%= simple_form_for @share_form, as: :share_form, url: create_share_image_path(@image), html: { novalidate: '' } do |f| %>
  <%= f.input :subject, label: 'Email Subject:', placeholder: 'Hi Look At This Image' %>
  <%= f.input :recipient, label: 'Recipient:', placeholder: 'user@domain.com' %>
  <%= f.input :content, label: 'Content:', as: :text, placeholder: 'What you wanna tell me' %>
  <%= f.submit 'Share Image', class: 'btn btn-primary' %>
<% end %>
