<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for :session,
                        url: login_path,
                        html: { id: 'session_form', novalidate: '' } do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :remember_me, as: :boolean, label: 'Remember me on this computer' %>
      <%= f.submit 'Log in', class: 'btn btn-primary' %>
    <% end %>
    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>
